datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model IngestJob {
    id  Int @id @default(autoincrement())
}

model Asset {
    id              Int     @id @default(autoincrement())
    videoID         Int
    assetType       String

    video           Video   @relation(fields: [videoID], references: [id])
}

model Video {
    id          Int     @id @default(autoincrement())
    legacyID    Int
    assets      Asset[]
}